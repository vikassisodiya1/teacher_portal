<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <% if students.previous_page %>
      <li class="page-item">
        <%= link_to 'Previous', students_path(page: students.previous_page), class: 'page-link' %>
      </li>
    <% else %>
      <li class="page-item disabled">
        <a class="page-link" href="#" tabindex="-1">Previous</a>
      </li>
    <% end %>

    <% (1..students.total_pages).each do |page_number| %>
      <li class="page-item <%= 'active' if page_number == students.current_page %>">
        <%= link_to page_number, students_path(page: page_number), class: 'page-link' %>
      </li>
    <% end %>

    <% if students.next_page %>
      <li class="page-item">
        <%= link_to 'Next', students_path(page: students.next_page), class: 'page-link' %>
      </li>
    <% else %>
      <li class="page-item disabled">
        <a class="page-link" href="#">Next</a>
      </li>
    <% end %>
  </ul>
</nav>

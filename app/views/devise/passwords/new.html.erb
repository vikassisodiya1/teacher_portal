<div class="bg-light py-3 py-md-5">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-12 col-md-11 col-lg-8 col-xl-7 col-xxl-6">
        <div class="bg-white p-4 p-md-5 rounded shadow-sm">
          <div class="row">
            <div class="col-12">
              <div class="text-center mb-5">
                <a href="#!">
                  <img src="/tailwebs-logo.png" alt="Tailwebs Logo" width="175" height="30">
                </a>
              </div>
            </div>
          </div>

          <h2 class="text-center mb-4">Forgot your password?</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="row gy-3 gy-md-4">
              <!-- Email Field -->
              <div class="col-8">
                <div class="field">
                  <%= f.label :email, class: "form-label" %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                </div>
              </div>

              <!-- Submit Button -->
              <div class="col-8 d-flex ">
                <div class="d-grid actions">
                  <%= f.submit "Reset password", class: "btn btn-primary" %>
                </div>
              </div>
            </div>
          <% end %>

          <div class="row">
            <div class="col-12">
              <hr class="mt-5 mb-4 border-secondary-subtle">
              <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center">
                <%= render partial: "devise/shared/links", locals: {style: "link-secondary text-decoration-none"}%>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
